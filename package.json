{
  "name": "zedson-watchcraft",
  "version": "1.0.0",
  "description": "ZEDSON Watchcraft - Watch Shop Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": ["watch", "shop", "management", "electron", "sqlite"],
  "author": "ZEDSON Watchcraft",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1"
  },
  "build": {
    "appId": "com.zedson.watchcraft",
    "productName": "ZEDSON Watchcraft",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/sqlite3/deps/**",
      "!node_modules/sqlite3/build/**"
    ]
  }
