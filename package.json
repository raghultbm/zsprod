{
  "name": "zedson-watchcraft",
  "version": "1.0.0",
  "description": "Complete Watch Shop Management System for ZEDSON Watchcraft",
  "main": "main.js",
  "author": "ZEDSON Watchcraft",
  "license": "MIT",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.zedson.watchcraft",
    "productName": "ZEDSON Watchcraft",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*",
      "node_modules/sqlite3/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "watch",
    "shop",
    "management",
    "inventory",
    "sales",
    "service",
    "electron",
    "desktop"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zedson/watchcraft-management"
  }
}
